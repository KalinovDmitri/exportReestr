<Window
    x:Class="ExportLNDreestr.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ExportLNDreestr"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:user="clr-namespace:ExportLNDreestr"
    Title="Реестры ЛНД"
    Width="525"
    Height="350"
    mc:Ignorable="d">
    <Window.DataContext>
        <user:ViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="258*" />
            <ColumnDefinition Width="0*" />
            <ColumnDefinition Width="259*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="61*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>
        <Button
            x:Name="button"
            Margin="10,10,38,0"
            VerticalAlignment="Top"
            Command="{Binding ExportRO}"
            Content="Реестр ЛНД Общества" />
        <StatusBar
            Grid.RowSpan="2"
            Grid.ColumnSpan="3"
            Height="27"
            Margin="10,0,10,10"
            VerticalAlignment="Bottom" />
        <TextBox
            x:Name="LogTextBox"
            Grid.ColumnSpan="3"
            Width="497"
            Height="228"
            Margin="0,42,10,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Text="{Binding LogBox, UpdateSourceTrigger=PropertyChanged}"
            TextWrapping="Wrap" />

    </Grid>
</Window>
